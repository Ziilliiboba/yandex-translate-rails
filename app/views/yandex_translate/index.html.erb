<h1>Translator (use Yandex API)</h1>

<%= form_tag("index", method: "get") do %>
<p>
	<%= label_tag(:text_in, "Translate for:") %>
	<%= text_field_tag(:text_in, @text_in) %>
	<%= submit_tag("Translate") %>
</p>
<p>
	<%= label_tag(:text_out, "Translated text:") %>
	<%= text_field_tag(:text_out, @text_out) %>
</p>
<% end %>

