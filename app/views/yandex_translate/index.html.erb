<h1>Translator (use Yandex API)</h1>

<%= form_tag(translate_path, method: "post") do %>
<p>
	<%= label_tag(:login, @login) %>
	<%= label_tag(User.where(name: @login).pluck(:id)[0]) %>
</p>
<p>
	<%= label_tag(:text_in, "Translate for:") %>
	<%= text_field_tag(:text_in, @text_in) %>
	<%= submit_tag("Translate") %>
</p>
<p>
	<%= label_tag(:text_out, "Translated text:") %>
	<%= text_field_tag(:text_out, @text_out) %>
	<h3>History:</h3>
</p>
	<%= @histories.find_each do |history| %>
		<%= label_tag(User.where(id: history.user_id).pluck(:name)[0]) %>
		<%= label_tag(history.user_id) %>
		<br/>
		<%= label_tag(history.before_translate) %>
		<br/>
		<%= label_tag(history.after_translate) %>
		<br/><br/>
	<% end %>
<% end %>



