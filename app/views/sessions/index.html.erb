<h1>LOG IN</h1>

<%= form_tag(log_in_path, method: "post") do %>
	<p>
		<%= label_tag("Login:") %>
		<%= text_field_tag(:login, @login) %>
	</p>
	<p>
		<%= label_tag("Password:") %>
		<%= text_field_tag(:password, @password) %>
	</p>
	<p>
		<%= submit_tag("Enter") %>
	</p>
<% end %>

<%= form_tag(registration_path, method: "post") do %>
	<p>
		<%= submit_tag("Registration") %>
	</p>
	<p>
		<%= label_tag(@error_message) %>
	</p>
<% end %>
